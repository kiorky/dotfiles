[color]
        diff = auto
        status = auto
        branch = auto
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[user]
        name = Mathieu Le Marec - Pasquet
        email = kiorky@cryptelium.net

[github]
        user = kiorky
[alias]
        changes=diff --name-status -r
        rc = rebase --continue
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        lg = log -p
        mpan = config user.email "mpa@makina-corpus.com"
        mpae = config user.name 'Mathieu Le Marec - Pasquet'
        mpa =  !git mpan && git mpae
        kn = config user.email "kiorky@cryptelium.net"
        ke = config user.name 'Mathieu Le Marec - Pasquet'
        k =  !git kn && git ke 
        pt = log --pretty=format:'%C(yellow)%h%Cred%d%Creset - %C(cyan)%an %Creset: %s %Cgreen(%cr)'
[core]
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
       filemode=false

[url "ssh://mpa@cgit.makina-corpus.net/var/git/"]
        insteadOf = mc:

[url "ssh://mpa@cgit.makina-corpus.net/home/users/mpa/git/"]
        insteadOf = mchome:

[diff]
        renames = true
